<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Responses", responses_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<p id="notice"><%= notice %></p>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <div class="container show-box">
    <p>
      <strong>Reply:</strong>
      <%= @response.reply %>
    </p>

    <p>
      <strong>Question:</strong>
      <%= @response.question %>
    </p>

    <p>
      <strong>Student:</strong>
      <%= @response.student %>
    </p>
    <div class="row" style="margin-top: 20px;">
      <div class="col-auto">
        <%= button_to 'Edit', edit_student_response_path(@student, @response), :class => "edit-button", :method => :get %>
      </div>
      <div class="col-auto">
        <%= button_to 'Delete', delete_student_response_path(@student, @response), :class => "delete-button", :method => :get %>
      </div>
    </div>
  </div>
</div>

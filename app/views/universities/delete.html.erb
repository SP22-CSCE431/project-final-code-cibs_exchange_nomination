<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Universities", universities_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <h2>Delete University</h2>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <div class="container show-box">
    <%= form_for(@university, :method => 'delete') do |f| %>

      <h2 style="text-align: center;">Are you sure you want to permanently delete this university?</h2>

      <hr style="height: 2px; width:90%; margin: auto; border: 0px solid #696969; border-top-width: 1px;" >

      <br>

      <p>
      University name: <%= @university.university_name %> <br>
      Number of Nominees: <%= @university.num_nominees %>
      </p>

      <p><strong>Notice:</strong> Deleting this item will also delete related nominators and students. </p>
      <%= link_to 'Show', @university %>
      <br><br>

      <div class="form-buttons">
        <%= f.submit("Delete University") %>
      </div>

    <% end %>
  </div>
</div>

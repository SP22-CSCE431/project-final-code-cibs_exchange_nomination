<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Admin", admin_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Question", [@question], :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Question Table", questions_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Help", admin_help_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">

  <h1>Answers</h1>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <div class="container show-box">
    <p id="notice"><%= notice %></p>

    <h4>Prompt: <%= @question.prompt %></h4>

    <br>

    <div class="row justify-content-center">
      <div class="col-auto">
        <table class="table center">
          <thead class="thread-dark">
            <tr>
              <th>Choice</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @answers.each do |answer| %>
              <tr>
                <td><%= answer.choice %></td>
                <td><%= button_to 'Edit Choice', edit_question_answer_path(@question, answer), :class => "edit-button", :method => :get %></td>
                <td><%= button_to 'Delete Choice', [@question, answer], :class => "delete-button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div style="margin-left: 30%;">
      <%= button_to "New Answer", new_question_answer_path(@question), :class => "create-new-item-button", :method => :get %>
    </div>
  </div>
</div>

<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Answers", question_answers_path(@question), :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<% content_for :title, "View Choice"%>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <div class="container show-box">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Choice:</strong>
      <%= @answer.choice %>
    </p>

    <p>
      <strong>Question:</strong>
      <%= @answer.question.prompt %>
    </p>

    <div class="row" style="margin-top: 20px;">
      <div class="col-auto">
        <%= button_to 'Edit', edit_question_answer_path(@question, @answer), :class => "edit-button", :method => :get %>
      </div>
      <div class="col-auto">
        <%= button_to 'Delete', delete_question_answer_path(@question, @answer), :class => "delete-button", :method => :get %>
      </div>
    </div>
  </div>
</div>

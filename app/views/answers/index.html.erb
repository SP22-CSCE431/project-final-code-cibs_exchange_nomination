<p id="notice"><%= notice %></p>
<div style="text-align: right"><%= link_to 'Help', admin_help_path %></div>

<h1>Answers</h1>
<br>
<p>Prompt: <%= @question.prompt %></p>
<br>

<table>
  <thead>
    <tr>
      <th>Choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.choice %></td>
        <td><%= link_to 'Edit Choice', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Delete Choice', delete_question_answer_path(@question, answer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path(@question) %> |
<%= link_to 'View This Question', [@question] %> | 
<%= link_to 'To Question Table', questions_path %>

<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Questions", questions_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<p id="notice"><%= notice %></p>

<% content_for :title, "View Question"%>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <div class="container show-box">
    <p>
      <strong>Multiple Choice:</strong>
      <%= @question.multi %>
    </p>

    <p>
      <strong>Prompt:</strong>
      <%= @question.prompt %>
    </p>
    <% if @question.multi %>
    	<h2>Answers</h2>
      <ol style="list-style-type: Lower-alpha;">
        <% for answer in @question.answer %>
    		  <li style="margin-bottom: 10px;"><%= answer.choice %></li>
  	     <% end %>
      </ol>
      <div class="row">
        <%= button_to "View Answers", question_answers_path(@question), :class => "create-new-item-button", :method => :get %>
      </div>
    <% end %>
    <div class="row" style="margin-top: 20px;">
      <div class="col-auto">
        <%= button_to 'Edit', edit_question_path(@question), :class => "edit-button", :method => :get %>
      </div>
      <div class="col-auto">
        <%= button_to 'Delete', delete_question_path(@question), :class => "delete-button", :method => :get %>
      </div>
    </div>
  </div>
</div>
